<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PlayListNiklaus.AlbumPage">
    <StackLayout Padding="20">
        <Label Text="{Binding SelectedAlbum.Title}"
               FontSize="24"
               HorizontalOptions="CenterAndExpand"
               VerticalOptions="Start"/>

        <Label Text="{Binding SelectedAlbum.Artist}"
               FontSize="20"
               HorizontalOptions="CenterAndExpand"
               VerticalOptions="Start"
               TextColor="Gray"
               Margin="0,0,0,10"/>

        <CollectionView ItemsSource="{Binding SelectedAlbum.Songs}">
            <CollectionView.ItemsLayout>
                <LinearItemsLayout Orientation="Vertical"/>
            </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout Orientation="Horizontal" Padding="10">
                        <Label Text="{Binding Title}" FontSize="16" TextColor="Black"/>
                        <Label Text="{Binding Duration}" FontSize="16" TextColor="Gray" HorizontalOptions="EndAndExpand"/>
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </StackLayout>
</ContentPage>

